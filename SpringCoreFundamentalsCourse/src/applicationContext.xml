<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
           
	<bean id="rateExchangeGateway" class="blackbelt.springf.service.RateExchangeGateway"/>
	
	<bean id="bankService" class="blackbelt.springf.service.BankService">
		<property name="interestRate" value="0.05"/>
		<property name="gateway" ref="rateExchangeGateway"/>
	</bean>
	
</beans>